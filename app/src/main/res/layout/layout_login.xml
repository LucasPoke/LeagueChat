<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/texture"
    android:weightSum="1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="20dp"
        android:text="@string/LoginTitle"
        android:textSize="42sp"
        android:textColor="#FF9F00"
        android:gravity="center"
        android:id="@+id/txtLoginTitle"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/region_select"
        android:popupBackground="#80000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/acc_info"
        android:text="@string/acc_info"
        android:layout_gravity="center"
        android:gravity="center|top"
        android:layout_marginBottom="-15dp"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:textScaleX="1.11">
    </TextView>

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@drawable/border_no_top">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:id="@+id/centerView"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:text="@string/username"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginLeft="12dp"
            android:layout_above="@+id/separator"/>
        <EditText
            android:id="@+id/et_enter_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#CCCCCC"
            android:background="@null"
            android:hint="..."
            android:textColorHint="#DDDDDD"
            android:layout_toRightOf="@+id/username"
            android:layout_alignTop="@+id/username"
            android:inputType="textVisiblePassword"
            android:selectAllOnFocus="true"
            android:maxLength="24"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="#CCCCCC"
            android:layout_below="@+id/centerView"
            android:layout_marginTop="2dp"
            android:id="@+id/separator"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:text="@string/password"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:letterSpacing="0.03"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/separator"/>

        <EditText
            android:id="@+id/et_enter_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint="..."
            android:background="@null"
            android:textColorHint="#DDDDDD"
            android:gravity="center"
            android:textColor="#CCCCCC"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:maxLength="24"
            android:layout_toRightOf="@+id/password"
            android:layout_alignTop="@+id/password"/>
    </RelativeLayout>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:text="@string/login_button_text"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-15dp"
        android:onClick="beginLogin"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="20dp"
        android:text="@string/login_subreddit"
        android:textSize="28sp"
        android:textColor="#FF9F00"
        android:gravity="center"
        android:id="@+id/txtPostsTitle"/>
    <ListView
        android:id="@+id/txtStories"
        android:layout_width="270dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:descendantFocusability="afterDescendants"/>
    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </RelativeLayout>
</LinearLayout>

